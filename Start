+<body>
+    <div class="slot-machine">
+        <h1>Emoji Slotmaschine</h1>
+        <div class="balance" id="balance">Kapital: 1.000‚Ç¨</div>
+        <div class="info" id="info">Dr√ºcke auf "Drehen" um zu starten!</div>
+        <div class="slots" id="slots">
+            <div class="slot" data-index="0">üçí</div>
+            <div class="slot" data-index="1">üçã</div>
+            <div class="slot" data-index="2">‚≠ê</div>
+        </div>
+        <button id="spin">Drehen (10‚Ç¨)</button>
+    </div>
+
+    <script>
+        const SPIN_COST = 10;
+        const PAYOUT = 60; // Netto-Gewinn von 50‚Ç¨ pro Sieg (60‚Ç¨ - 10‚Ç¨ Einsatz)
+        const emojis = ["üçí", "üçã", "üçá", "üçÄ", "üíé", "üîî"];
+        const winningEmoji = "üéâ";
+
+        const slotElements = Array.from(document.querySelectorAll(".slot"));
+        const balanceElement = document.getElementById("balance");
+        const infoElement = document.getElementById("info");
+        const spinButton = document.getElementById("spin");
+
+        let balance = 1000;
+        let isSpinning = false;
+
+        function formatCurrency(value) {
+            return value.toLocaleString("de-DE", {
+                style: "currency",
+                currency: "EUR",
+                maximumFractionDigits: 0
+            });
+        }
+
+        function updateBalanceDisplay() {
+            balanceElement.textContent = `Kapital: ${formatCurrency(balance)}`;
+        }
+
+        function setInfoMessage(message, isWin = false) {
+            infoElement.textContent = message;
+            infoElement.style.color = isWin ? "#9cff8a" : "#ff9f9f";
+        }
+
+        function randomEmoji() {
+            return emojis[Math.floor(Math.random() * emojis.length)];
+        }
+
+        function spinSlots() {
+            const results = slotElements.map(() => randomEmoji());
+            results.forEach((emoji, index) => {
+                slotElements[index].textContent = emoji;
+            });
+            return results;
+        }
+
+        function isWinningCombination(results) {
+            return results.every((emoji) => emoji === results[0]);
+        }
+
+        function handleSpin() {
+            if (isSpinning) {
+                return;
+            }
+
+            if (balance < SPIN_COST) {
+                setInfoMessage("Nicht genug Kapital, um weiterzuspielen.");
+                spinButton.disabled = true;
+                return;
+            }
+
+            isSpinning = true;
+            spinButton.disabled = true;
+            balance -= SPIN_COST;
+            updateBalanceDisplay();
+            setInfoMessage("Viel Gl√ºck!");
+
+            const spinDuration = 1200;
+            const interval = 80;
+            const startTime = performance.now();
+
+            const animation = setInterval(() => {
+                slotElements.forEach((slot) => {
+                    slot.textContent = randomEmoji();
+                });
+
+                if (performance.now() - startTime >= spinDuration) {
+                    clearInterval(animation);
+                    const results = spinSlots();
+                    const hasWon = isWinningCombination(results);
+
+                    if (hasWon) {
+                        balance += PAYOUT;
+                        updateBalanceDisplay();
+                        setInfoMessage(`Du hast gewonnen! ${winningEmoji}`, true);
+                    } else {
+                        setInfoMessage("Du hast verloren.");
+                    }
+
+                    isSpinning = false;
+                    spinButton.disabled = balance < SPIN_COST;
+                }
+            }, interval);
+        }
+
+        spinButton.addEventListener("click", handleSpin);
+        updateBalanceDisplay();
+    </script>
+</body>
+</html>
 
